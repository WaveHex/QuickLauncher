{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quicklauncher",
  "version": "0.1.0",
  "identifier": "com.quicklauncher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "quicklauncher",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "allow-load": true,
      "databases": [
        "sqlite:quicklauncher.db"
      ]
    }
  }
}
